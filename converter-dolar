import os

os.system("cls")

print("-----CONVERSOR DE DÓLAR-----")

dolar = float(input("Digite o valor em dólar: "))
cotacao_dolar = float(input("Digite a cotação do dólar atual: "))
real = dolar * cotacao_dolar

os.system("cls")

print("-----CONVERSOR DE DÓLAR-----")
print("O valor em reais é: ", real)